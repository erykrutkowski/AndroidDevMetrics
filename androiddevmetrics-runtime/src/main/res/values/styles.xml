<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AndroidDevMetrics.Base" parent="android:Theme.Light">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AdmEntryStyle">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AdmEntryDescriptionStyle">
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="AdmEntryDescriptionStyle.NoMargin">
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="AdmEntryValueStyle">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="AdmEntryValueStyle.NoMargin">
        <item name="android:layout_marginBottom">0dp</item>
    </style>

</resources>